extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
    +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text:"HOME",href:"/"},{text:"BROWSE",href:"/Browse"}, {text:"COMMUNITY",href:"#"}, {text:"ABOUT",href:"/about"}, {text:"CONTACT",href:"/contact"}],1)
        hr
        .container
            .row
                .col-xs-12.col-sm-12.col-md-3.col-lg-3
                    .panel.panel-default
                        .panel-heading
                            h4 Shop by Gender
                        .panel-body
                            ul#cat-navi.nav.nav-list
                                li.active
                                    a(href='#') Womens
                                li
                                    a(href='#') Mens
                    .panel.panel-default.visible-lg
                        .panel-heading
                            h4 Shop By Product
                        .panel-body
                            ul#cat-navi2.nav.nav-list
                                li.active
                                    a(href='#') Clothes
                                li
                                    a(href='#') Shoes
                                li
                                    a(href='#') Accessories
                                li
                                    a(href='#') Swimwear
                .col-md-9
                    .thumbnail
                        img.img-responsive(src='http://placehold.it/800x300', alt='')
                        .caption-full
                            h4.pull-right $24.99
                            h4
                                a(href='#') Product Name
                            p
                                | See more snippets like these online store reviews at
                                a(target='_blank', href='http://bootsnipp.com') Bootsnipp - http://bootsnipp.com
                                | .
                            p
                                | Want to make these reviews work? Check out
                                strong
                                    a(href='http://maxoffsky.com/code-blog/laravel-shop-tutorial-1-building-a-review-system/') this building a review system tutorial
                                | over at maxoffsky.com!
