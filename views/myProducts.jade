extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
        +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text: "HOME", href: "/"}, {text: "BROWSE", href: "/Browse"}, {
            text: "COMMUNITY",
            href: "#"
        }, {text: "ABOUT", href: "/about"}, {text: "CONTACT", href: "/contact"}],0)
        hr
        .container.main
            .row
                .col-sm-3.col-md-3
                    #accordion.panel-group
                        .panel.panel-default
                            .panel-heading
                                h4.panel-title
                                    a(data-toggle='collapse', data-parent='#accordion', href='#collapseOne')
                                        span.glyphicon.glyphicon-user
                                        | &nbsp Account
                            #collapseOne.panel-collapse.collapse.in
                                .panel-body
                                    table.table
                                        tr
                                            td
                                                a(href="accountDetails") Account Details
                                        tr
                                            td
                                                a(href='http://www.jquery2dotnet.com') My Orders
                                                span
                                        tr
                                            td
                                                span.glyphicon.glyphicon-trash.text-danger
                                                a.text-danger(href='http://www.jquery2dotnet.com')
                                                    | &nbsp Delete Account
                        .panel.panel-default
                            .panel-heading
                                h4.panel-title
                                    a(data-toggle='collapse', data-parent='#accordion', href='#collapseTwo')
                                        span.glyphicon.glyphicon-th
                                        | &nbsp Sell
                            #collapseTwo.panel-collapse.collapse
                                .panel-body
                                    table.table
                                        tr
                                            td
                                                a(href='sell') Sell A Product
                                                span
                                        tr
                                            td
                                                a(href='http://www.jquery2dotnet.com') My Products
                h2 &nbsp #{title}                
                .col-md-9
                    .row
                        for item in selling
                            .col-sm-3.col-lg-3.col-md-3
                                .thumbnail
                                    img(id='search-results-image', src='images/#{item.image}.png', alt='Product')
                                    .caption
                                        h4.pull-right $#{item.price}
                                        h4
                                            a(href="item?itemid=#{item.uid}") #{item.label}
                                    .ratings
                                        p.pull-right 15 reviews
                                        p
                                            span.glyphicon.glyphicon-star
                                            span.glyphicon.glyphicon-star
                                            span.glyphicon.glyphicon-star
                                            span.glyphicon.glyphicon-star
                                            span.glyphicon.glyphicon-star
    include footer