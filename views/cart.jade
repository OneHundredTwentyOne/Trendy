extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
    +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text:"HOME",href:"/"},{text:"BROWSE",href:"/Browse"}, {text:"COMMUNITY",href:"#"}, {text:"ABOUT",href:"/about"}, {text:"CONTACT",href:"/contact"}],0)
        hr
        br
        .container
          .row
            for item in items
              .col-sm-12.col-md-10.col-md-offset-1
                table.table.table-hover
                  thead
                    tr
                      th Product
                      th.text-center Price
                      th.text-center Total
                      th
                  tbody
                    tr
                      td.col-sm-8.col-md-6
                        .media
                          a.thumbnail.pull-left(href='#')
                            img.media-object(src='images/#{item.image}.png', style='width: 72px; height: 72px;')
                          .media-body
                            h4.media-heading
                              p #{item.label}
                            h5.media-heading
                              | Seller:
                              p #{item.sellername}
                      td.col-sm-1.col-md-1.text-center
                        strong $#{item.price}
                      td.col-sm-1.col-md-1.text-center
                        strong $#{item.price}
                      td.col-sm-1.col-md-1

        .container        
            if(items[0] != null)                  
                .col-sm-12.col-md-10.col-md-offset-1

                  tr
                    td
                    td
                    td
                    td
                      h3 Total
                    td.text-right
                      h3
                        strong $#{totalPrice}
                  tr
                    td
                    td
                    td
                    td
                      button.btn.btn-default(type='button')
                        span.glyphicon.glyphicon-shopping-cart
                        |  Continue Shopping
                    td
                      form(id='form-purchase', method='post')
                        button(type='submit').btn.btn-primary.button-shopping-cart
                          | Purchase
             else
                 .col-sm-12.col-md-10.col-md-offset-1
                     h2 &nbsp #{title}
                     +alert-i-warning("Your cart is empty!")  
          br                    
    include footer