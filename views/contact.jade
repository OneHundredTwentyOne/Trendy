extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
    +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text:"HOME",href:"/"},{text:"BROWSE",href:"/Browse"}, {text:"COMMUNITY",href:"#"}, {text:"ABOUT",href:"/about"}, {text:"CONTACT",href:"/contact"}],0)
        hr
        .title Contact Us
        br
        .subtitle Fill in the form below to send us a message. We will reply as soon as we can.
        br
        form.well(id='form-login', method='post')
            .form-group
                label Name
                input.form-control(type='text', name='realname', required)
            .form-group
                label Email
                input.form-control(type='text', id='user-tf', name='email', required)
            .form-group
                label Subject
                input.form-control(type='text', id='user-tf', name='subject', required)
            .form-group
                label Message
                textarea#comment.form-control(rows='5', name='message', required)
            .controls
                button(type='submit').btn.btn-primary.button-sign-in
                    span.glyphicon.glyphicon-log-in
                    | &nbsp Send Message
            .clearfix

        br
    include footer    