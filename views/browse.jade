extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
    +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text:"HOME",href:"/"},{text:"BUY",href:"/Browse"},{text:"SELL",href:"/Sell"}, {text:"COMMUNITY",href:"#"}],0)
        hr
    .container
        .row
            .col-md-3
                p.lead Filter by Type
                .list-group
                    a.list-group-item(href='#') Clothing
                    a.list-group-item(href='#') Accessories
                    a.list-group-item(href='#') Shoes
            .col-md-9
                .row
                    .col-sm-4.col-lg-4.col-md-4
                        .thumbnail
                            img(src='http://placehold.it/320x150', alt='')
                            .caption
                                h4.pull-right #{items.price}
                                h4
                                    a(href='/item') #{items.label}
                            .ratings
                                p.pull-right 15 reviews
                                p
                                    span.glyphicon.glyphicon-star
                                    span.glyphicon.glyphicon-star
                                    span.glyphicon.glyphicon-star
                                    span.glyphicon.glyphicon-star
                                    span.glyphicon.glyphicon-star

    footer.footer
        p.text-muted  Copyright &copy Trendy 2016
