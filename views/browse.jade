extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
head
    title= title

block body
    include topnav
    .container
    +img-responsive ("images/logo.png", "Logo")
    .navbar-main
        +nav-pills-justified([{text:"HOME",href:"/"},{text:"BUY",href:"/Browse"},{text:"SELL",href:"/Sell"}, {text:"COMMUNITY",href:"#"}],1)
        hr
    .container
            .row
                .col-xs-12.col-sm-12.col-md-3.col-lg-3
                    .panel.panel-default
                        .panel-heading
                            h4 Shop by Product
                        .panel-body
                            ul#cat-navi.nav.nav-list
                                li.active
                                    a(href='#') Active category
                                li
                                    a(href='#') New in: Category
                                li
                                    a(href='#') New in: Category
                                li
                                    a(href='#') New in: Category
                                li
                                    a(href='#') New in: Category
                                li
                                    a(href='#') New in: Category
                    .panel.panel-default.visible-lg
                        .panel-heading
                            h4 Most Popular
                        .panel-body
                            ul#cat-navi2.nav.nav-list
                                li.active
                                    a(href='#') Active category
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                                li
                                    a(href='#') Category title
                .col-md-9
                for item in items
                    .row
                        .col-sm-4.col-lg-4.col-md-4
                            .thumbnail
                                +img-responsive("images/!{item.image}", "Product")
                                .caption
                                    !{item.price}
                                    a(href ='/item') !{item.label}
                                .ratings
                                    p.pull-right 15 reviews
                                    p
                                        span.glyphicon.glyphicon-star
                                        span.glyphicon.glyphicon-star
                                        span.glyphicon.glyphicon-star
                                        span.glyphicon.glyphicon-star
                                        span.glyphicon.glyphicon-star

    include footer
